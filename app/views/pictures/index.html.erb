<body>
  <div class="indexHeadBox clearfix">
    <div class="indexMenBox">
      <h2>Men</h2>
    </div>
    <div class="indexWomenBox">
      <h2>Women</h2>
    </div>
  </div>
  <div id="indexMainBox clearfix">
    <div class="indexBox1">
      <h4><i class="glyphicon glyphicon-bell"></i>新着コーディネート</h4>
    </div>
    <hr>
    <div class="indexBox2">
      <ul class="pictures">
        <% @pictures.each do |picture| %>
          <li>
          <a href="/pictures/<%= picture.id %>"><%= image_tag("#{picture.image}", :height => "200px", :width => "150px") %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</body>
