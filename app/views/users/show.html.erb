<div class="container">
  <div class="myBox1">
    <div class="myBox2">
      <h4>
        <%= image_tag("#{@user.avatar}", height: "70px", width: "70px") %> <%= @user.nickname %>さんのマイページ
      </h4>
      <p><%= link_to "プロフィールを確認", edit_user_path(@user.id) %></p>
    </div>
    <hr>
    <div class="row">
      <div class="tableBox1">
        <table class="table1">
          <tr>
            <td class="mine">自分の投稿</td><td class="favorite">お気に入り</td>
          </tr>
        </table>
      </div>
    </div>
    <div class="tableBox2">
      <div class="row">
      <table class="table2">
        <tr>
          <td class="men"><a href="">Men</a></td>
          <td class="women"><a href="">Women</a></td>
        </tr>
      </table>
      </div>
    </div>
    <div class="row">
      <div class="myBox3 clearfix">
        <div class="pictures">
          <% @pictures.each do |picture| %>
            <li class="list">
              <a href="/pictures/<%= picture.id %>"><%= image_tag("#{picture.image}", height: "200px", width: "150px") %></a>
            </li>
          <% end %>
        </div>
      </div>
      <div class="pagiNation row">
        <div class="page col-md-12">
          <%= paginate(@pictures) %>
        </div>
      </div>
    </div>
  </div>
</div>
